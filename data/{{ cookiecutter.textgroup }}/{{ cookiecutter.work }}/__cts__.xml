<ti:work xmlns:ti="http://chs.harvard.edu/xmlns/cts" groupUrn="urn:cts:{{namespace}}:{{textgroup}}" urn="urn:cts:{{namespace}}:{{textgroup}}.{{work}}" xml:lang="{{work_lang}}">
    <ti:title xml:lang="{{desc_lang}}">{{wk_name}}</ti:title>
    {% if is_edition =="y" %}
    <ti:edition workUrn="urn:cts:{{namespace}}:{{textgroup}}.{{work}}" urn="urn:cts:{{namespace}}:{{textgroup}}.{{work}}.{{project}}-{{work_lang}}1">
        <ti:label xml:lang="{{desc_lang}}">{{edition}}</ti:label>
        <ti:description xml:lang="{{desc_lang}}">{{desc_edition}}</ti:description>
    </ti:edition>
    {%endif%}
    {% if is_translation =="y" %}
    <ti:translation xml:lang="{{translation_lang}}" workUrn="urn:cts:{{namespace}}:{{textgroup}}.{{work}}" urn="urn:cts:{{namespace}}:{{textgroup}}.{{work}}.{{project}}-{{translation_lang}}1">
        <ti:label xml:lang="{{desc_lang}}">{{translation}}</ti:label>
        <ti:description xml:lang="{{desc_lang}}">{{desc_translation}}</ti:description>
    </ti:translation>
    {%endif%}
</ti:work>